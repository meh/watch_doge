#pragma once

#include <wd/common>

namespace wd {
	namespace packet {
		namespace builder {
			class buffer {
				public:
					buffer() : _data(nullptr), _total(0), _offset(0), _partial(0) { }
					~buffer() { std::free(_data); }

				public:
					void next(size_t size);
					void more(size_t size);

					uint8_t* data();
					size_t   length() const;

					uint8_t* whole();
					size_t   total() const;

				private:
					uint8_t* _data;
					size_t   _total;
					size_t   _offset;
					size_t   _partial;
			};
		}
	}
}
