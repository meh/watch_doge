			}

			const int CREATE  = 100;
			const int DESTROY = 101;
			const int START   = 102;
			const int STOP    = 103;
			const int FILTER  = 104;
			const int GET     = 105;
		}

		namespace pinger {
			namespace error {
				const int ALREADY_STARTED = 2;
