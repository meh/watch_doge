	namespace command {
		const int UNKNOWN = -1;

		const int SUCCESS = 0;
		const int ERROR   = 1;

		const int CONTROL  = 0;
		const int SNIFFER  = 1;
		const int WIRELESS = 2;
		const int PINGER   = 3;

		namespace control {
