<resources>
	<color name="primary">#000000</color>
	<color name="accent">#b21818</color>
	<color name="content">#111111</color>

	<color name="neutral">#333333</color>
	<color name="success">#006600</color>
	<color name="failure">#660000</color>

	<color name="card">#222222</color>

	<style name="Theme.WatchDoge" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/accent</item>
		<item name="colorControlActivated">@color/accent</item>
	</style>

	<style name="Theme.WatchDoge.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:background">@color/primary</item>
	</style>

	<style name="Theme.WatchDoge.Tab.Layout" parent="Widget.Design.TabLayout">
		<item name="tabTextAppearance">@style/Theme.WatchDoge.Tab.Text</item>
		<item name="tabBackground">@drawable/tab_background</item>
	</style>

	<style name="Theme.WatchDoge.Tab.Text" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">12sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="Theme.WatchDoge.ProgressBar" parent="Widget.MaterialProgressBar.ProgressBar">

	</style>

	<style name="Theme.WatchDoge.Card" parent="CardView">
		<item name="cardBackgroundColor">@color/card</item>
		<item name="cardCornerRadius">0dp</item>
		<item name="cardPreventCornerOverlap">false</item>
	</style>
</resources>
