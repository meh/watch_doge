<resources>
	<color name="primary">#000000</color>
	<color name="accent">#b21818</color>
	<color name="content">#111111</color>
	<color name="contrast">#ffffff</color>
	<color name="darken">#80000000</color>

	<color name="text">#ffffff</color>
	<color name="text_hint">#999999</color>
	<color name="text_disabled">#dddddd</color>

	<color name="neutral">#333333</color>
	<color name="positive">#009900</color>
	<color name="negative">#990000</color>
	<color name="success">#006600</color>
	<color name="failure">#550000</color>
	<color name="warning">#a52800</color>

	<color name="card">#222222</color>

	<style name="Theme.WatchDoge" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/accent</item>

		<item name="preferenceTheme">@style/Theme.WatchDoge.Preference</item>
    <item name="alertDialogTheme">@style/Theme.WatchDoge.Dialog.Alert</item>
		<item name="actionButtonStyle">@style/Theme.WatchDoge.Button</item>
	</style>

	<style name="Theme.WatchDoge.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:background">@color/primary</item>
		<item name="actionButtonStyle">@style/Theme.WatchDoge.Button</item>
	</style>

	<style name="Theme.WatchDoge.Toolbar.Popup" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:background">@color/card</item>
		<item name="actionButtonStyle">@style/Theme.WatchDoge.Button</item>
	</style>

	<style name="Theme.WatchDoge.Tab.Layout" parent="Widget.Design.TabLayout">
		<item name="tabTextAppearance">@style/Theme.WatchDoge.Tab.Text</item>
		<item name="tabBackground">@drawable/tab_background</item>
		<item name="colorControlActivated">@color/accent</item>
	</style>

	<style name="Theme.WatchDoge.Tab.Text" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">12sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="Theme.WatchDoge.ProgressBar" parent="Widget.MaterialProgressBar.ProgressBar">
    <item name="mpb_progressStyle">circular</item>
	</style>

	<style name="Theme.WatchDoge.ProgressBar.Horizontal" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
    <item name="mpb_progressStyle">horizontal</item>
		<item name="mpb_useIntrinsicPadding">false</item>
	</style>

	<style name="Theme.WatchDoge.Card" parent="CardView">
		<item name="cardBackgroundColor">@color/card</item>
		<item name="cardCornerRadius">0dp</item>
		<item name="cardPreventCornerOverlap">false</item>
	</style>

	<style name="Theme.WatchDoge.Button.Icon" parent="Widget.AppCompat.Button.Borderless">
		<item name="colorControlActivated">@color/accent</item>
		<item name="colorControlHighlight">@color/accent</item>
		<item name="colorControlNormal">@color/accent</item>

		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:textSize">32dp</item>

		<item name="android:background">@drawable/icon_button_background</item>
	</style>

	<style name="Theme.WatchDoge.Edit" parent="Widget.AppCompat.EditText">
		<item name="colorControlHighlight">@color/accent</item>
		<item name="colorControlNormal">@color/accent</item>
		<item name="android:textColor">@drawable/edit_color</item>
		<item name="android:textColorHint">@color/text_hint</item>
	</style>

	<style name="Theme.WatchDoge.Text.Error" parent="@android:style/TextAppearance.Widget.TextView">
		<item name="android:textColor">@color/contrast</item>
		<item name="android:background">@color/failure</item>
	</style>

	<style name="Theme.WatchDoge.Preference" parent="@style/PreferenceThemeOverlay">
		<item name="android:background">@color/content</item>
	</style>

	<style name="Theme.WatchDoge.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/contrast</item>
		<item name="android:background">@color/card</item>

		<item name="buttonBarNegativeButtonStyle">@style/Theme.WatchDoge.Button.Negative</item>
		<item name="buttonBarPositiveButtonStyle">@style/Theme.WatchDoge.Button.Positive</item>
	</style>

	<style name="Theme.WatchDoge.Button" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@drawable/button_color</item>
		<item name="android:background">@drawable/button_background</item>
	</style>

	<style name="Theme.WatchDoge.Button.Positive" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@drawable/button_positive_color</item>
		<item name="android:background">@drawable/button_background</item>
	</style>

	<style name="Theme.WatchDoge.Button.Negative" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@drawable/button_negative_color</item>
		<item name="android:background">@drawable/button_background</item>
	</style>
</resources>
